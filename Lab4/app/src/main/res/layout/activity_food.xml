<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".FoodActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn một món ăn"
        android:textSize="22sp"
        android:layout_marginBottom="20dp"/>

    <RadioGroup
        android:id="@+id/rgThucAn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbPhoHaNoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phở Hà Nội" />

        <RadioButton
            android:id="@+id/rbBunBoHue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bún Bò Huế" />

        <RadioButton
            android:id="@+id/rbMiQuang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mì Quảng" />

        <RadioButton
            android:id="@+id/rbHuTiu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủ Tíu Sài Gòn" />
    </RadioGroup>

    <Button
        android:id="@+id/btnDatMonAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="ĐẶT MÓN" />

</LinearLayout>