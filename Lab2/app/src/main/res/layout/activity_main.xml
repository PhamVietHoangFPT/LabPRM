<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-50dp">

        <EditText
            android:id="@+id/startNumber"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="192dp"
            android:ems="10"
            android:text="1"
            android:hint="start number"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/endNumber"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:text="100"
            android:hint="end number"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/startNumber" />

        <Button
            android:id="@+id/randomButton"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_marginStart="96dp"
            android:layout_marginTop="68dp"
            android:text="Random"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/endNumber" />

        <TextView
            android:id="@+id/result"
            android:layout_width="198dp"
            android:layout_height="43dp"
            android:layout_marginStart="104dp"
            android:layout_marginTop="84dp"
            android:text="Result"
            android:textSize="100px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/randomButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>